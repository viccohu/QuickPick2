{
  "name": "quickpick2",
  "version": "1.0.0",
  "description": "Windows桌面图片查看管理器",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:native": "node-gyp rebuild --directory=native",
    "postinstall": "echo 'Native module is optional. Run npm run build:native to enable performance boost.'"
  },
  "keywords": [
    "electron",
    "image-viewer",
    "photo-manager"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.0.0",
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.0"
  },
  "build": {
    "appId": "com.quickpick2.app",
    "productName": "QuickPick2",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "exifreader": "^4.36.2",
    "exiftool-vendored": "^35.10.1",
    "lightdrift-libraw": "^1.0.0-alpha.6",
    "remixicon": "^4.9.1",
    "sharp": "^0.34.5"
  },
  "optionalDependencies": {
    "node-addon-api": "^7.0.0"
  }
}
